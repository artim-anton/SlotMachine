<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artim.anton.slotmachine.MainActivity"
    android:background="@drawable/mybg">

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/line0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line0_img0"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line0_img1"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line0_img2"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line0_img3"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line0_img4"
            android:src="@drawable/slot6"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line0"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line1_img0"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line1_img1"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line1_img2"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line1_img3"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line1_img4"
            android:src="@drawable/slot6"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line2_img0"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line2_img1"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line2_img2"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line2_img3"
            android:src="@drawable/slot6"/>

        <ImageView
            style="@style/slot_position"
            android:id="@+id/line2_img4"
            android:src="@drawable/slot6"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@id/line2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/but_play_bg"
        android:text="Start"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/btn"
        android:visibility="invisible"
        android:onClick="onClickNext"
        android:text="Second Solution" />

</RelativeLayout>